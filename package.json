{
  "name": "DEREJA_ME_System",
  "version": "0.0.7",
  "main": "./app/index.html",
  "description": "Dereja Monitoring and Evaluation System",
  "author": "Michael Kifle Teferra <mikeintoshsys@gmail.com> (https://mikeintoshsys.com)",
  "node-remote": [
    "<all_urls>"
  ],  
  "private": true,
  "type": "module",
  "volta": {
    "npm": "10.8.2",
    "node": "22.7.0"
  },
  "scripts": {
    "start": "nw .",
    "build:cli:nw": "nwbuild --mode=build --glob=false --flavor=sdk --cacheDir=./node_modules/nw --outDir=../build/nw --managedManifest=./nw.version.manifest.json ./app/",
    "build:clean": "rimraf ../build",
    "build:macos:arm64": "npm run build:clean && node ./tasks/build.macos.arm64.js",
    "build:macos:x64": "npm run build:clean && node ./tasks/build.macos.x64.js",
    "build:win:x64": "npm run build:clean && node ./tasks/build.win.x64.js"
  },
  "devDependencies": {
    "base-volta-off-of-nwjs": "^1.0.5",
    "nw": "^0.92.0",
    "nw-builder": "^4.9.0"
  },
  "chromium-args": "--enable-spell-checking",

  "window": {
    "toolbar": true,
    "webView": true,
    "transparent": false,
    "resizable": true,
    "frame": true,
    "always-on-top": false,
    "icon": "./app/frontend/icons/dereja.png",
    "width": 1200,
    "height": 700,
    "position": "center"
  }
}